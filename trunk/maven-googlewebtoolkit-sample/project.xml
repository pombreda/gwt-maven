<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
    <id>gwt-maven-sample</id>
    <currentVersion>1.0.1</currentVersion>
    <name>gwt-maven-sample</name>
    <package>com.totsp.sample</package>
    <inceptionYear>2006</inceptionYear>
    <organization>
        <name>TotSP</name>
        <url>http://www.screaming-penguin.com</url>
    </organization>
    <shortDescription>Sample for Maven gwt plugin</shortDescription>    
    <siteAddress>http://code.google.com/p/gwt-maven/</siteAddress>
    <repository>
        <connection>scm:svn:http://gwt-maven.googlecode.com/svn</connection>
        <developerConnection>scm:svn:https://gwt-maven.googlecode.com/svn</developerConnection>
        <url>http://gwt-maven.googlecode.com/svn</url>
    </repository>
    <developers>
        <developer>
            <name>Charlie Collins</name>
            <email>charlie . collins @ gmail.com</email>
            <organization>TotSP</organization>
        </developer>
        <developer>
            <name>Robert Cooper</name>
            <email>kebernet @ gmail.com</email>
            <organization>TotSP</organization>
        </developer>
    </developers>   
    <reports>
        <report>maven-faq-plugin</report>
        <!-- 
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        -->
    </reports>
     
    <build>
        <sourceDirectory>src/java</sourceDirectory>
    </build>
    
    <dependencies>
        <!--  stuff that IS war bundled -->       
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-servlet</artifactId>
            <version>1.3.3</version>
            <type>jar</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <version>1.8.0.7</version>
            <type>jar</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
       
        <!--  stuff that is NOT war bundled -->       
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <version>1.3.3</version>
            <type>jar</type>
        </dependency>        
        
        <!--  these need to be present because the Hosted Mode Tomcat instance does not have them
        - in an actual deployment they need not be in the WAR because they are typically included with regular Tomcat -->
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>2.0</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-dbcp</groupId>
            <artifactId>commons-dbcp</artifactId>
            <version>1.0</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-pool</groupId>
            <artifactId>commons-pool</artifactId>
            <version>1.0</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>

