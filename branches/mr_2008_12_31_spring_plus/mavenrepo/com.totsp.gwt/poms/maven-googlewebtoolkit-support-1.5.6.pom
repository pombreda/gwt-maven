<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
    <groupId>com.totsp.gwt</groupId>
    <artifactId>maven-googlewebtoolkit-support</artifactId>
    <currentVersion>1.5.6</currentVersion>
    <organization>
        <name>TotSP</name>
    </organization>
    <shortDescription>Support for TotSP Maven GWT Plugin(s)</shortDescription>
    <name>Maven-GoogleWebToolkit-Support</name>
    <package>com.totsp.mavenplugin.gwt</package>
    <inceptionYear>2006</inceptionYear>
